@using Microsoft.AspNetCore.Components.Routing

<Router AppAssembly="@typeof(BlazorApp).Assembly">
    <Found Context="routeData">
        <RouteView RouteData="@routeData" DefaultLayout="@typeof(AppCursos.Shared.MainLayout)" />
    </Found>

    <NotFound>
        <LayoutView Layout="@typeof(AppCursos.Shared.MainLayout)">
            <div class="container mt-4">
                <div class="alert alert-warning">Página no encontrada.</div>
            </div>
        </LayoutView>
    </NotFound>
</Router>

@code {
    // Puedes crear un pequeño componente reutilizable
    public class RedirectToLogin : ComponentBase
    {
        [Inject] NavigationManager Nav { get; set; } = default!;
        protected override void OnInitialized()
        {
            Nav.NavigateTo("/login", true);
        }
    }
}