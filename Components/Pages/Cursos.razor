@page "/cursos"
@using AppCursos.Models
@inject AppCursos.Services.CursoService cursos
@inject AppCursos.Services.SesionService sesion
@inject NavigationManager nav

<h3 class="mb-3">Catálogo de cursos</h3>

<div class="row g-3">
    @foreach (var c in cursos.ObtenerTodos())
    {
        <div class="col-12 col-md-6">
            <div class="card h-100 shadow-sm">
                <img src="@Img(c.ImagenPath)"
                     class="card-img-top"
                     style="height:180px;object-fit:cover"
                     onerror="this.onerror=null;this.src='/images/placeholder.png';" />

                <div class="card-body d-flex flex-column">
                    <h5 class="card-title mb-1">@c.Titulo</h5>
                    <span class="badge bg-info mb-2">@c.Categoria</span>
                    <p class="card-text text-muted flex-grow-1">@c.Descripcion</p>

                    <div class="d-flex justify-content-between">
                        <a class="btn btn-outline-primary btn-sm" href="/curso/@c.Id">
                            <i class="bi bi-search"></i> Ver más
                        </a>

                        @if (sesion.EstaLogueado)
                        {
                            <button class="btn btn-success btn-sm">
                                <i class="bi bi-check-circle"></i> Inscribirme
                            </button>
                        }
                        else
                        {
                            <button class="btn btn-outline-success btn-sm"
                                    @onclick="@(() => IrALoginConReturnCurso(c.Id))">
                                <i class="bi bi-box-arrow-in-right"></i> Iniciar sesión
                            </button>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    // Normaliza ruta y agrega placeholder si falta
    string Img(string? p)
    {
        p = (p ?? "").Trim();
        if (string.IsNullOrWhiteSpace(p)) return "/images/placeholder.png";
        if (p[0] != '/') p = "/" + p;
        return p;
    }

    // Evita comillas anidadas en el atributo: pasamos el ID y armamos la URL aquí
    void IrALoginConReturnCurso(int id)
    {
        nav.NavigateTo($"/login?returnUrl=/curso/{id}");
    }
}
